    <!-- ROI Calculator Script -->
    <script>
    function calculateROI() {
        const industry = document.getElementById('industry').value;
        const customerValue = parseFloat(document.getElementById('customerValue').value) || 0;
        const monthlyLeads = parseInt(document.getElementById('monthlyLeads').value) || 0;
        const afterHoursPercent = parseInt(document.getElementById('afterHoursPercent').value) || 0;
        
        // Calculate missed leads
        const missedLeads = Math.round((monthlyLeads * afterHoursPercent) / 100);
        
        // Calculate conversion rate (assume 30% of captured leads convert)
        const convertedLeads = Math.round(missedLeads * 0.3);
        
        // Calculate lost revenue
        const monthlyLost = convertedLeads * customerValue;
        const annualLost = monthlyLost * 12;
        
        // AI Assistant cost
        const setupFee = 1500;
        const monthlyFee = 150;
        const firstYearCost = setupFee + (monthlyFee * 12);
        
        // Profit
        const profit = annualLost - firstYearCost;
        
        // Display results
        document.getElementById('results').style.display = 'block';
        document.getElementById('missedLeads').textContent = missedLeads + ' leads/month';
        document.getElementById('monthlyLost').textContent = '--icon">‚è∞</div>
                    <div class="quick-action-text">Ask about hours</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action-icon">üí∞</div>
                    <div class="quick-action-text">Check pricing</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action + monthlyLost.toLocaleString();
        document.getElementById('annualLost').textContent = '--icon">‚è∞</div>
                    <div class="quick-action-text">Ask about hours</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action-icon">üí∞</div>
                    <div class="quick-action-text">Check pricing</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action + annualLost.toLocaleString();
        document.getElementById('cost').textContent = '-icon">‚è∞</div>
                    <div class="quick-action-text">Ask about hours</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action-icon">üí∞</div>
                    <div class="quick-action-text">Check pricing</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action + firstYearCost.toLocaleString();
        document.getElementById('profit').textContent = '-icon">‚è∞</div>
                    <div class="quick-action-text">Ask about hours</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action-icon">üí∞</div>
                    <div class="quick-action-text">Check pricing</div>
                </div>
                <div class="quick-action-card">
                    <div class="quick-action + profit.toLocaleString();
        
        // Scroll to results
        document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
    
    // Auto-calculate on page load with default values
    window.addEventListener('load', function() {
        setTimeout(calculateROI, 1000);
    });
    
